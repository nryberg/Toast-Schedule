!!! XML iso-8859-1

%html
%head
  %title= @header_text
  = stylesheet_link_tag('http://fonts.googleapis.com/css?family=Pacifico')
  = stylesheet_link_tag("blueprint/screen.css")
  = stylesheet_link_tag("blueprint/ie.css")
  = stylesheet_link_tag "blueprint/print.css", :media => "print"
  = stylesheet_link_tag("formtastic_changes")
  = stylesheet_link_tag("formtastic")
  = stylesheet_link_tag("special.css")
  = javascript_include_tag 'jquery', 'rails', 'application'
  = javascript_include_tag "jquery.min.js", "application"
  = javascript_include_tag "jquery-ui.min.js", "application"
  = stylesheet_link_tag "jquery-ui.css"
  = csrf_meta_tag
%body
  %p#notice= notice 
  %p#class= alert
  .container
    .span-15
      %h1.font_pacifico
        = yield :top_title
    .span-8
      %span.right.small
        - if session[:member_id]
          = link_to "My Schedule", member_path(session[:member_id])
          = "Signed in as "
          %b= session[:member_name]
          = ": Not you?"
          = link_to "Logout", logout_path
        - else
          Not a member? 
          = link_to "Register", new_member_path
          Or 
          = link_to "Sign In", login_path
    .span-24
      = yield