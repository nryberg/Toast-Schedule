%p#notice= notice

= link_to 'Edit', edit_template_path(@template)
\|
= link_to 'Back', templates_path


%span.span-4
  .span-4#header_box.club_background Template
  .span-2= link_to '(change)', edit_template_path(@template)
  .span-2= link_to '(Add a template)', new_template_path()
%span.span-16
  %div.span-20
    %span.span-3
      %h3 Name
    %span.span-6
      %code= @template.name
    %span.span-6
      - @template.plates.each do |plate|
        %p= plate.title

  / %span.span-5
  / %h4.meeting_background Roles
  / = render :partial => "template_role", :collection => @template.template_roles
  / = link_to "(+) New Role", new_template_role_path(@template, @role)

