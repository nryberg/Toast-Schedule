%span.span-4
  .span-4#lead_box.meeting_background Meeting
  .span-4#header_box
    = link_to '(Change)', edit_meeting_path(@meeting)
  .span-4#header_box
    = link_to '(New Meeting)', new_meeting_path()
%span.span-16  
  .span-16#lead_box
    .span-3#labeler Date:
    .span-10= @meeting.meeting_date_pretty
  %h2 
    .span-3#labeler Theme:
    = @meeting.theme
  .span-16
    .span-3#labeler Roles:
    %span.span-8
      %table
        = render :partial => 'role', :collection => @roles
        %tr
          %td{:colspan => "2"}= link_to '(+ Add Role)', new_meeting_role_path(@meeting, @role) 
  
