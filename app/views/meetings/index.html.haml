.span-4
  .span-4#lead_box.meeting_background Meetings
  .span-4#action_box
    = link_to '(Add New)', new_meeting_path()
.span-20.last
  - if @club.meetings.upcoming then
    .span-20.last
      .span-4#labeler Upcoming 
      .span-16.last
        %table
          %tr
            %th Date
            %th Time
            %th Theme
          = render @upcoming_meetings
  - if @club.meetings.past then
    .span-20.last
      .span-4#labeler Past
      .span-16.last
        %table
          %tr
            %th Date
            %th Time
            %th Theme
          = render @past_meetings
