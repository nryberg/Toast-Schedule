%span.span-4
  .span-4#lead_box.club_background Club
  - if current_user.admin_for(current_club.id)
    #action_box
      .span-4
        = link_to '(edit)', edit_club_path(@club)
      .span-4
        = link_to '(add)', new_club_path()
%span.span-18
  .span-18
    .span-3#labeler Name
    .span-14= @club.name
  .span-18
    .span-3#labeler Address
    .span-14
      %code= @club.address
      %h5= link_to "Map it", map_to(@club.address), {"target"=>"_blank"}
  .span-18
    .span-3#labeler Number
    %span.span-14= @club.club_number
  .span-18
    .span-3
      .meeting_background#labeler.last Meetings
      .span-3= link_to "(+) New Meeting", new_meeting_path
    .span-14.prepend-1.last
      %table.span-10.append-8
        %th Date
        %th Theme
        = render :partial => 'shared/meeting', :collection => @club.upcoming_meetings
  .span-18
    .span-3
      .member_background#labeler.last  Members
      .span-3= link_to "(+) New Member", members_search_path
    .span-14.prepend-1.last
      = render :partial => 'shared/member', :collection => @club.members
