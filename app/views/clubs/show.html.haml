%span.span-4
  .span-4#lead_box.club_background Club
  .span-4#header_box.meeting_background
    = link_to 'Meetings', meetings_path 

  .span-4#header_box.member_background
    = link_to 'Members', members_path
%span.span-16
  %div.span-20#header_box
    = @club.name
    = link_to '(edit)', edit_club_path(@club)
    = link_to '(add)', new_club_path()
  %div.span-20
    %span.span-3
      %h3 Address
    %span.span-6
      %code= @club.address
      %h5= link_to "Map it", map_to(@club.address), {"target"=>"_blank"}
  %div.span-20  
    %span.span-3
      %h3 Club Number
    %span.span-6= @club.club_number
  %span.span-10
    %h4.meeting_background Upcoming Meetings
    = render :partial => 'shared/meeting', :collection => @club.upcoming_meetings
    = link_to "(+) New Meeting", new_meeting_path
  %span.span-10
    %h4.member_background Members
    = render :partial => 'shared/member', :collection => @club.members.sort_by(&:name)
    = link_to "(+) New Member", new_member_path
