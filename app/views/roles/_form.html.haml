= semantic_form_for ([@meeting, @role]) do |f|
  -if @role.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@role.errors.count, "error")} prohibited this role from being saved:"
      %ul
        - @role.errors.full_messages.each do |msg|
          %li= msg
  %div.span-20
    %span-12
      = f.inputs do 
        = f.input :member_id, :as => :select, :collection => @members
        = f.input :role_type_id, :as => :select, :collection => RoleType.all, :label => "Role"
        = f.input :title
      .span-12.prepend-2.last 
        %input{:type=>'image', :value => 'submit', :src => "/images/update_meeting_button.png"}
        - if @role.created_at?
          = link_to image_tag("delete_meeting_button.png"), @role,:confirm => "Are you sure?", :method => :delete
        = link_to image_tag("cancel_meeting_button.png"), meeting_path(@meeting)
    
 
