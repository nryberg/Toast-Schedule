= form_for ([@agenda, @role]) do |f|
  -if @role.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@role.errors.count, "error")} prohibited this role from being saved:"
      %ul
        - @role.errors.full_messages.each do |msg|
          %li= msg
  = f.collection_select(:member_id, @members, :id, :name)
  = f.collection_select(:role_type_id, RoleType.all, :id, :name)

  .actions
    = f.submit 'Save'
