= semantic_form_for ([@meeting, @role]) do |f|
  -if @role.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@role.errors.count, "error")} prohibited this role from being saved:"
      %ul
        - @role.errors.full_messages.each do |msg|
          %li= msg
  %div.span-20
    %span-12
      = f.inputs do 
        = f.input :member_id, :as => :select, :collection => @members
        = f.input :role_type_id, :as => :select, :collection => RoleType.all, :label => "Role"
        = f.input :title
      .actions
        = f.buttons
    .span-20= link_to 'Drop', @role, :confirm => 'Are you sure you want to delete this role?', :method => :delete
    .span-20= link_to ' <- Back to Meeting', meeting_path(@meeting)
