= form_tag do
  %fieldset
    %legend 
    Please Log In
    .name
      %label{:for => "name"} Name:
      = text_field_tag :name, params[:name]
    .password
      %label{:for => "password"} Password:
      = password_field_tag :password, params[:password]
    .submit
      = submit_tag "Login"
      