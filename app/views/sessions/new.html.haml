= content_for :top_title do
  TM Schedule Me - Login
.span-4
  .span-4#lead_box.member_background Member
.span-20.last
  .span-20.last
    %h2 Log In
  .span-20.last
    = form_tag do
      .span-20
        .span-3#labeler Your E-Mail:
        .span-10.last
          = text_field_tag :email, params[:email]
      .span-20
        .span-3#labeler Password:
        .span-10
          = password_field_tag :password, params[:password]
      .span-20
        .span-3#labeler Remember Me:
        .span-10
          = check_box_tag :remember_me, 1, params[:remember_me] 
      .span-20.prepend-3.last
        .submit
          = submit_tag "Login"
  .span-20.prepend-3.last
    = link_to "forgotten password", new_password_reset_path
