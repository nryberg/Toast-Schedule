= form_tag do
  %fieldset
    %legend 
    Please Log In
    .email
      %label{:for => "email"} E-Mail:
      = text_field_tag :email, params[:email]
    .password
      %label{:for => "password"} Password:
      = password_field_tag :password, params[:password]
    .submit
      = submit_tag "Login"
      